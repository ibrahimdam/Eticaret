@model LoginModel

<h1>Giriş</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Account" asp-action="Login" method="post">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <div asp-validation-summary="All" class="text-danger"></div>   <div class="form-group row mb-2">
                <label asp-for="UserName" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="UserName" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="Password" class="col-md-4 col-form-label"></label>
                <div class="col-md-8">
                    <input class="form-control" asp-for="Password" />
                </div>
            </div>

            <div class="form-group row mb-2">
                <div class="col-md-8 offset-4">
                    <button type="submit" class="btn btn-primary"> Giriş </button>
                </div>

            </div>
            <div class="form-group row mb-2">
                <div class="col-md-8 offset-4">
                    <a href="/forgotpassword" class="btn btn-primary"> Şifremi unuttum </a>
                </div>

            </div>
        </form>
    </div>
</div>