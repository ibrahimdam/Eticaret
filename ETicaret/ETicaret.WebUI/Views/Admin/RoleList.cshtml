@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1>Role Listesi</h1>
        <hr />
        <a href="/admin/role/create" class="btn btn-primary btn-sm">Rol Ekle</a>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <td style="width:200px;">Id</td>
                        <td>Role Adı</td>
                        <td style="width:150px;"> </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <a href="/admin/role/edit/@role.Id" class="btn btn-warning btn-sm mr-2"><i class="bi bi-card-list"></i></a>
                                <form action="/admin/deleterole" method="post">
                                    <input type="hidden" name="RoleId" value="@role.Id" />
                                    <button style="display:inline;" type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash3-fill"></i></button>
                                </form>

                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning mt-3">
                <h3>Listelenecek Rol bulunamadı.</h3>
            </div>
        }
    </div>
</div>