@model RoleModel
<h3>Rol Ekle</h3>
<hr />

<form asp-controller="Admin" asp-action="RoleCreate" method="post">
    
    <div class="row">
        <div class="col-md-12">
            @*ModelState'ten gelen hatalar burada toplu halde gösterilecek.'*@
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">

            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label" asp-for="Name"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-5">
                    <button type="submit" class="btn btn-primary btn-sm"> Kaydet </button>
                </div>
            </div>

        </div>
    </div>

</form>

