@model UserModel

<h1>Kullanıcı / Üye Güncelle</h1>
<hr />
<form asp-controller="Admin" asp-action="UserEdit" method="post">
    <div class="row">
        <div class="col-md-8">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div asp-validation-summary="All"></div>
            <div class="form-group row mb-2">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-2">
                <label asp-for="UserName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row mb-2">
                <div class="col-8 offset-4">
                    <button type="submit" class="btn btn-warning">Güncelle </button>
                </div>
            </div>

        </div>

        <div class="col-md-4">
            @if (ViewBag.Roles != null)
            {


                @foreach (var roleName in ViewBag.Roles)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox"
                               class="custom-control-input"
                               name="selectedRoles"
                               value="@roleName"
                               id="@roleName"
                        @(Model.SelectedRoles.Any(x => x == roleName) ? "checked" : "") />
                        <label class="custom-controls-label" for="@roleName">@roleName</label>
                    </div>
                }
            }
            <hr />
            <div class="custom-control custom-checkbox">
                <input asp-for="EmailConfirmed" type="checkbox" class="custom-control-input" />
                <label asp-for="EmailConfirmed" class="custom-controls-label"></label>
            </div>
        </div>



    </div>


</form>