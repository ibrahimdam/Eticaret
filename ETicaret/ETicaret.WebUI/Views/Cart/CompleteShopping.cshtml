@model OrderModel

<h1>Sipariş Durumu</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">İletişim Bilgileri</h4>
        <form asp-controller="Cart" asp-action="CompleteShopping" method="post">
            <input type="hidden" name="cartId" value="0" />

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                
                <div class="col-md-6">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" />
                </div>
               
            </div>
            <div class="row mb-3">
                <div class="col-md-12">
                    <label asp-for="@Model.Note"></label>
                    <input asp-for="@Model.Note" class="form-control" />
                </div>                
            </div>
            <hr />
            <h4>Ödeme Bilgileri</h4>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="@Model.CardName"></label>
                    <input asp-for="@Model.CardName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.CardNumber"></label>
                    <input asp-for="@Model.CardNumber" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationMonth"></label>
                    <input asp-for="@Model.ExpirationMonth" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.ExpirationYear"></label>
                    <input asp-for="@Model.ExpirationYear" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="@Model.Cvc"></label>
                    <input asp-for="@Model.Cvc" class="form-control" />
                </div>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary btn-lg">Alışverişi Tamamla</button>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3"> Özet Bilgiler </h4>
        <ul class="list-group mb-3">  
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.ProductName</h6>
                        <small class="text-muted"> @item.Quantity Adet x @item.Price ₺</small>
                    </div>
                    <small class="text-muted"> </small>
                    
                </li>
            }
            
            <li class="list-group-item d-flex justify-content-between">
                <small class ="text-muted">
                    Toplam (TL)
                </small>
                <strong class="text-muted">@Model.CartModel.TotalPrice() ₺</strong>
            </li>
        </ul>
    </div>
</div>